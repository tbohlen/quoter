{
    "name": "Quoter",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Quoter allows easy saving of your favorite quotes",
    "browser_action": {
        "default_icon": "icon.png"
		, "default_title": "Quoter"
		, "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": ["quoteMaker.js"]
    }
}